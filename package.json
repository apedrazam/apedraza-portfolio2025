{
  "name": "apedraza-portfolio2025",
  "version": "1.0.0",
  "description": "Adrian Pedraza's Portfolio Website",
  "main": "index.js",
  "scripts": {
    "start": "npm run dev:full",
    "dev": "eleventy --serve --watch",
    "build": "npm run clean && npm run sass:build && eleventy",
    "build:prod": "npm run clean && npm run sass:build && ELEVENTY_PRODUCTION=true eleventy",
    "clean": "rm -rf _site",
    "sass": "sass assets/scss:_site/assets/css --watch",
    "sass:build": "sass assets/scss:_site/assets/css --style=compressed",
    "dev:full": "npm-run-all clean --parallel dev sass"
  },
  "keywords": [
    "portfolio",
    "design",
    "ux",
    "jamstack"
  ],
  "author": "Adrian Pedraza",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-img": "^3.1.8",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "favicons": "^7.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "sass": "^1.69.5"
  },
  "dependencies": {
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "micromodal": "^0.6.1",
    "tiny-slider": "^2.9.4"
  },
  "browserslist": [
    ">0.3%",
    "last 3 versions",
    "not dead",
    "not ie 11"
  ]
}
