                <!-- Laptop mockup -->
                {% video "/assets/videos/design-system.webm", "Laptop mockup for Devex Design System", ", (max-width: 1200px) 85vw, 75vw", "case-study-mockup", { autoplay: true, loop: true, muted: true, playsinline: true } %}
              </div>
            </div>
            <div class="case-study-content">
              <h2 class="case-study-title">
