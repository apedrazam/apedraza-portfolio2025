<!-- Work Section - Wrapping both Case Studies and Clients -->
<section id="work-section" class="work-section">
  <!-- Case Studies Section -->
  <section id="work" class="case-studies-section">
    <div class="case-studies-container">
      <h2 class="case-studies-title">Selected work</h2>
      <p class="case-studies-description highlight">Here you can find some of my most recent and relevant projects.</p>
      
      <div class="case-studies-list">
          <!-- Case Study 1: Devex Design Process -->
          <a href="/case-study/devex-design-process/" class="block">
          <div class="case-study-card case-study-1">
            <div class="case-study-image-container">
              <figure class="case-study-image-wrapper">
                <!-- Hex object background -->
                <object 
                  data="/assets/img/hex-object-red.svg" 
                  type="image/svg+xml" 
                  class="case-study-bg"
                ></object>
                <!-- Laptop mockup -->
                {% video "/assets/videos/design-process.webm", "Laptop mockup for Devex Design Process", ", (max-width: 1200px) 85vw, 75vw", "case-study-mockup", { autoplay: true, loop: true, muted: true, playsinline: true } %}
              </figure>
            </div>
            <div class="case-study-content">
              <h3 class="case-study-title">
                Devex Design Process
              </h3>
              <p class="case-study-description  highlight">
                Shaping the process of a product team through design leadership and cross-collaboration.
              </p>
              <div class="flashcard-btn" data-case-study="devex-design-process" onclick="event.preventDefault(); event.stopPropagation();">
                <i class="fa-solid fa-bolt"></i>
                <div class="flashcard-trigger-text">Case study flashcard</div>
              </div>
            </div>
          </div>
        </a>
        
        <!-- Case Study 2: Revamping a job posting flow -->
        <a href="/case-study/devex-job-posting/" class="block">
          <div class="case-study-card case-study-2">
            <div class="case-study-content left-align">
              <h3 class="case-study-title">
                Revamping a job posting flow
              </h3>
              <p class="case-study-description highlight">
                Redesign of a job posting feature to reduce drop-off and increase market alignment.              </p>
              <div class="flashcard-btn" data-case-study="devex-job-posting" onclick="event.preventDefault(); event.stopPropagation();">
                <i class="fa-solid fa-bolt"></i>
                <div class="flashcard-trigger-text">Case study flashcard</div>
              </div>
            </div>
            <div class="case-study-image-container right-align">
              <figure class="case-study-image-wrapper">
                <object 
                  data="/assets/img/hex-object-yellow.svg" 
                  type="image/svg+xml" 
                  class="case-study-bg"
                ></object>
                {% image "/assets/img/job-posting-flow.webp", "Phone mockup for job posting flow", "", "case-study-mockup phone" %}
              </figure>
            </div>
          </div>
        </a>
        
        <!-- Case Study 3: From UI toolkit to Design System -->
        <a href="/case-study/devex-design-system/" class="block">
